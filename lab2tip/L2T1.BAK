#include <stdio.h>
#include <conio.h>
#include <math.h>
int main ()
{
  int a, min=1000000, max=0, n=0,nom,nom1;
  clrscr(); // очистка экрана
 // вывод условия задачи
  printf ("\n Условие:Для вводимой последовательности целых чисел найти");
  printf ("\n порядковый номер числа, имеющего наибольшее значение среди");
  printf ("\n чисел, делящихся на 7.");
 //ввод данных
  printf ("\n Введите последовательность чисел (конец ввода '*') \n");
 //считывание введёной строки и обработка её
  while (scanf(" %d",&a))
  {
   n++;
   if ((abs(a))%7==0)
    if (a<0)
     {
     if (abs(min)>abs(a))
      {
      min=a;
      nom1=n;
      }
     }
    else
     {
     if (max<a)
      {
      max=a;
      nom=n;
      }
     }
  }
 if (max==0)
 {
  max=min;
  nom=nom1;
 }
 //вывод полученного результата
  if (n!=0)
  if (max!=0)
   printf ("  Наибольшее значение среди чисел, делящихся на 7:%2.0d имеет %2.0d порядковый номер",max,nom);
  else
   printf ("  Нет чисел делящихся на 7");
  else
   printf ("  Нет последовательности чисел");
